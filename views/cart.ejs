<%- include('partials/header', { 
    title: 'Carrito de Compras',
    cartCount: cartItems.reduce((sum, item) => sum + item.quantity, 0)
}) %>

<div class="cart-container">
    <h1>Tu Carrito de Compras</h1>

    <% if (cartItems.length === 0) { %>
        <div class="empty-cart">
            <div class="empty-cart-icon">üõí</div>
            <h2>Tu carrito est√° vac√≠o</h2>
            <p>¬°Descubre nuestros productos y encuentra algo especial!</p>
            <a href="/products" class="btn btn-primary">Ver Productos</a>
        </div>
    <% } else { %>
        <div class="cart-content">
            <div class="cart-items">
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cartItems.forEach(item => { %>
                        <tr class="cart-item" data-product-id="<%= item.product_id %>">
                            <td class="product-info">
                                <div class="product-image">
                                    <img src="/images/<%= item.image %>" alt="<%= item.name %>">
                                </div>
                                <div class="product-details">
                                    <h3><%= item.name %></h3>
                                    <p class="product-category">Categor√≠a: <%= item.category %></p>
                                </div>
                            </td>
                            <td class="product-price">$<%= item.price %></td>
                            <td class="product-quantity">
                                <div class="quantity-controls">
                                    <button class="quantity-btn minus" 
                                            data-product-id="<%= item.product_id %>">-</button>
                                    <input type="number" 
                                           class="quantity-input" 
                                           value="<%= item.quantity %>" 
                                           min="1" 
                                           max="<%= item.stock %>"
                                           data-product-id="<%= item.product_id %>">
                                    <button class="quantity-btn plus" 
                                            data-product-id="<%= item.product_id %>"
                                            <%= item.quantity >= item.stock ? 'disabled' : '' %>>+</button>
                                </div>
                                <% if (item.quantity >= item.stock) { %>
                                    <small class="stock-warning">Stock m√°ximo: <%= item.stock %></small>
                                <% } %>
                            </td>
                            <td class="product-subtotal">$<%= (item.price * item.quantity).toFixed(2) %></td>
                            <td class="product-actions">
                                <button class="btn btn-danger remove-item" 
                                        data-product-id="<%= item.product_id %>"
                                        data-product-name="<%= item.name %>">
                                    üóëÔ∏è
                                </button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>

                <div class="cart-actions">
                    <button id="clear-cart-btn" class="btn btn-outline">Vaciar Carrito</button>
                    <a href="/products" class="btn btn-outline">Seguir Comprando</a>
                </div>
            </div>

            <div class="cart-summary">
                <div class="summary-card">
                    <h3>Resumen de Compra</h3>
                    
                    <div class="summary-row">
                        <span>Subtotal:</span>
                        <span>$<%= cartItems.reduce((sum, item) => sum + (item.price * item.quantity), 0).toFixed(2) %></span>
                    </div>
                    
                    <div class="summary-row">
                        <span>Env√≠o:</span>
                        <span>Gratis</span>
                    </div>
                    
                    <div class="summary-row total">
                        <span>Total:</span>
                        <span>$<%= total %></span>
                    </div>

                    <button id="checkout-btn" class="btn btn-success btn-block">
                        Proceder al Pago
                    </button>

                    <div class="security-notice">
                        <p>üîí Compra 100% segura</p>
                        <small>Tu informaci√≥n est√° protegida</small>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

<%- include('partials/footer', { script: '/js/cart.js' }) %>